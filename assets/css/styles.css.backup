:root{
  /* Default (production) theme: dark mode colors */
  --bg:#020817;
  --panel:#0b1220;
  --muted:#4B5563;
  --text:#E5E7EB;
  --accent:#06B6D4;
  --accent-2:#FB7185;
  --max-width:1200px;
  --radius:12px;
  /* overlay and border helper variables (dark default uses light translucents) */
  --glass: rgba(255,255,255,0.02);
  --border-weak: rgba(255,255,255,0.03);
  --hover-bg: rgba(255,255,255,0.03);
  --tile-bg: #08101a;
  --tile-border: rgba(255,255,255,0.03);
  --tile-shadow: rgba(2,8,23,0.6);
  --tile-preview-bg: rgba(0,0,0,0.4);
  --btn-foreground: #020817;
}

/* Opt-in light/debug theme — enable by adding data-theme="light" on <body> or via JS toggle */
[data-theme="light"]{
/* --- Begin merged homepage-redesign.css --- */

/* Homepage redesign tile layout (1 large + 6 small) */
.featured-grid{padding:3rem 0;background:var(--bg-elev-1, #0b0f13);} 
.featured-grid .container{display:grid;grid-template-columns:1fr;gap:16px;} 
@media(min-width:900px){.featured-grid .container{grid-template-columns:2fr 1fr;grid-auto-rows:1fr;}} 
.big-tile{background:linear-gradient(135deg, #032, #045);color:#fff;padding:2rem;border-radius:10px;display:flex;flex-direction:column;justify-content:center;align-items:flex-start;min-height:240px;} 
.small-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:12px;margin-top:0;} 
.small-tile{background:#0f1720;color:#fff;padding:14px;border-radius:8px;display:flex;flex-direction:column;justify-content:center;align-items:flex-start;min-height:100px;} 
.small-tile h3{margin:0 0 6px;font-size:1rem} 
.small-tile p{margin:0;font-size:0.88rem;color:hsla(0,0%,100%,0.8)} 
@media(max-width:899px){.featured-grid .container{grid-template-columns:1fr}.small-grid{grid-template-columns:repeat(2,1fr);} }

/* Navigation / navbar-unique */
.navbar-unique{background:linear-gradient(180deg,rgba(2,6,11,0.95),rgba(2,6,11,0.85));backdrop-filter:blur(6px);position:sticky;top:0;z-index:60;border-bottom:1px solid rgba(255,255,255,0.04);} 
.navbar-inner{display:flex;align-items:center;gap:18px;justify-content:space-between;padding:0.6rem 12px;max-width:var(--max-width);margin:0 auto} 
.brand{display:flex;align-items:center;gap:10px;text-decoration:none;color:#fff} 
.brand .shark-mini{width:36px;height:36px;border-radius:8px;object-fit:cover;border:1px solid rgba(255,255,255,0.08);display:block} 
.brand .brand-text{font-weight:700;font-family:inherit;letter-spacing:0.3px;font-size:15px} 
.nav-links{display:flex;gap:10px;list-style:none;margin:0;padding:0;align-items:center} 
.nav-links li{display:inline-block} 
.nav-links li a{color:rgba(255,255,255,0.92);text-decoration:none;padding:8px 10px;border-radius:6px;font-weight:600} 
.nav-links li a:hover{background:rgba(255,255,255,0.03)} 
.header-cta-inline{display:flex;align-items:center;gap:8px} 
.nav-toggle{display:none;background:transparent;border:0;color:#fff;font-size:20px}

/* anchored sections */
.anchored-section{padding:48px 0;background:linear-gradient(180deg,transparent,rgba(255,255,255,0.01));border-top:1px solid rgba(255,255,255,0.02);} 
.anchored-section h2{margin:0 0 8px} 
.anchored-section .muted{color:hsla(0,0%,100%,0.75)}

/* smooth scroll */
html{scroll-behavior:smooth}

/* responsive */
@media(max-width:900px){
  .nav-links{display:none}
  .nav-toggle{display:block}
  .header-cta-inline{display:none}
}

/* small tweaks to improve header spacing and on-brand look */
.navbar-unique .nav-links li a{font-size:14px}
.navbar-unique{padding-top:6px;padding-bottom:6px}

/* Colored tiles, shark cursor, and emoji styles */
.tile-row-bottom { display:grid; grid-template-columns:repeat(3,1fr); gap:1.5rem; margin-top:1.25rem; }
.tile-hero{ width:100%; min-height:240px; }

/* Shark hover cursor (ensure file exists at /assets/cursors/shark.png) */
a:hover, .tile:hover {
  cursor: url('/assets/cursors/shark.png') 12 12, pointer;
}

.emoji { display:inline-block; width:1.2em; height:1.2em; line-height:1; vertical-align:middle; margin-right:.45rem; }
.emoji-large { width:1.6em; height:1.6em; }

.tile { padding:1.25rem; border-radius:10px; color:var(--text, #E5E7EB); display:flex; flex-direction:column; justify-content:space-between; box-shadow: 0 6px 18px rgba(0,0,0,0.4); transition:transform .18s ease, box-shadow .18s ease, filter .12s ease; position:relative; overflow:hidden; }

/* Colored Tile Variants */
.tile--shared {
  background: linear-gradient(135deg, #1E90FF 0%, #60A5FA 100%);
  color: #041022;
}
.tile--vps {
  background: linear-gradient(135deg, #06B6D4 0%, #0EA5A5 100%);
  color: #041022;
}
.tile--wp {
  background: linear-gradient(135deg, #FB7185 0%, #FDB3A2 100%);
  color: #041022;
}

.tile::after { content: ""; position: absolute; right: -6%; bottom: -18%; width: 60%; height: 120%; background: radial-gradient(circle at 20% 20%, rgba(255,255,255,0.06), transparent 20%), radial-gradient(circle at 80% 80%, rgba(0,0,0,0.06), transparent 20%); transform: rotate(18deg); pointer-events:none; filter: blur(16px); }

.tile:hover { transform: translateY(-8px) scale(1.01); box-shadow: 0 22px 44px rgba(0,0,0,0.45); filter: saturate(1.06); }

.cta { display:inline-block; padding:.6rem 1rem; border-radius:8px; font-weight:700; text-decoration:none; }
.cta-primary { background: #041022; color: #fff; }
.cta-accent { background: rgba(255,255,255,0.92); color: #041022; font-weight:700; padding:.6rem .9rem; border-radius:8px; }

@media (max-width: 900px) {
  .tile-row-bottom { grid-template-columns: 1fr; }
  .tile-hero { min-height:180px; padding:1.2rem; }
}

/* subtle emoji pulse */
.emoji-pulse { animation: pulse 2.2s infinite; display:inline-block; transform-origin:center; }
@keyframes pulse { 0%{transform:scale(1);opacity:1}50%{transform:scale(1.08);opacity:.92}100%{transform:scale(1);opacity:1} }

/* Accessibility note: ensure contrast is adequate for tile text and adjust colors if necessary */

/* --- End merged homepage-redesign.css --- */

/* Cube scene for hero */
.cube-scene{width:140px;height:140px;perspective:900px}
.cube{position:relative;width:120px;height:120px;transform-style:preserve-3d;transform:translateZ(-60px);animation:rotateCube 2.6s cubic-bezier(.2,.9,.2,1) forwards}
.cube-face{position:absolute;display:flex;align-items:center;justify-content:center;width:120px;height:120px;border-radius:8px;color:#021018;font-weight:800;background:linear-gradient(135deg,#06B6D4,#00E1D8);box-shadow:0 10px 30px rgba(0,0,0,0.35);backface-visibility:hidden}
.cube-face.front{transform:rotateY(0deg) translateZ(60px)}
.cube-face.back{transform:rotateY(180deg) translateZ(60px)}
.cube-face.right{transform:rotateY(90deg) translateZ(60px)}
.cube-face.left{transform:rotateY(-90deg) translateZ(60px)}
.cube-face.top{transform:rotateX(90deg) translateZ(60px)}
.cube-face.bottom{transform:rotateX(-90deg) translateZ(60px)}

@keyframes rotateCube{
  0%{transform:rotateX(-10deg) rotateY(0deg) translateZ(-60px)}
  30%{transform:rotateX(-10deg) rotateY(160deg) translateZ(-60px)}
  60%{transform:rotateX(-10deg) rotateY(200deg) translateZ(-60px)}
  100%{transform:rotateX(-10deg) rotateY(200deg) translateZ(-60px)}
}

/* Make cube responsive and centered */
@media(max-width:640px){
  .cube-scene{width:110px;height:110px}
  .cube{width:96px;height:96px;transform:translateZ(-48px)}
  .cube-face{width:96px;height:96px}
}

/* Ensure tiles show a cyan border even without Tailwind utilities */
.tile, .card, .big-tile, .hero-tile, .hero-tile-visual {
  border: 2px solid #06b6d4 !important;
  box-shadow: 0 0 20px rgba(6, 182, 212, 0.5), 0 0 40px rgba(6, 182, 212, 0.2), inset 0 0 10px rgba(6, 182, 212, 0.1) !important;
}
.tile:hover, .card:hover, .big-tile:hover { 
  border-color: #22d3ee !important;
  box-shadow: 0 0 30px rgba(6, 182, 212, 0.8), 0 0 60px rgba(6, 182, 212, 0.4), inset 0 0 15px rgba(6, 182, 212, 0.2) !important;
}


  --bg:#ffffff;
  --panel:#f6f7f9;
  --muted:#6b7280;
  --text:#071221;
  --glass: rgba(0,0,0,0.04);
  --border-weak: rgba(0,0,0,0.06);
  --hover-bg: rgba(0,0,0,0.03);
  --tile-bg:#ffffff;
  --tile-border: rgba(0,0,0,0.06);
  --tile-shadow: rgba(0,0,0,0.10);
  --tile-preview-bg: rgba(255,255,255,0.9);
  --btn-foreground: #ffffff;
}
*{box-sizing:border-box}
html,body{height:100%}
html{scroll-behavior:smooth}
body{margin:0;font-family:Inter,system-ui,Segoe UI,Roboto,Arial; background:var(--bg); color:var(--text); -webkit-font-smoothing:antialiased}
.container{max-width:var(--max-width);margin:0 auto;padding:28px}

/* header */
.site-header{background:transparent; border-bottom:1px solid var(--border-weak);}                                                                                          
.header-row{display:flex;align-items:center;gap:16px}
.site-header.sticky{position:sticky;top:0;z-index:60}
.logo{font-family:Poppins,system-ui,sans-serif;font-weight:700;color:var(--text);text-decoration:none;font-size:18px}
.logo {display:flex;align-items:center;gap:10px}
.logo img.logo-img{height:36px;width:auto;display:block;border-radius:6px}
.logo .logo-text{display:inline-block}
@media (max-width:600px){.logo img.logo-img{height:30px}}
.nav{display:flex;gap:16px;margin-left:12px}
.nav a{color:var(--text);opacity:0.85;text-decoration:none;padding:6px 8px;border-radius:6px}
.nav a.active{background:linear-gradient(90deg,var(--accent),#00d1f5);color:#021018;opacity:1}
.nav a:hover{background:var(--hover-bg)}
.header-cta{margin-left:auto;display:flex;gap:10px}
.nav-toggle{display:none}
.btn{padding:10px 14px;border-radius:8px;text-decoration:none;font-weight:600;display:inline-block}
.btn-ghost{border:1px solid var(--border-weak);background:transparent;color:var(--text);}
.btn-outline{border:1px solid var(--border-weak);background:transparent;color:var(--text);}
.btn-primary{background:linear-gradient(90deg,var(--accent),#00d1f5);color:var(--btn-foreground);border:0}
.btn-cta{background:linear-gradient(90deg,#06B6D4,#00E1D8);color:var(--btn-foreground);border:0}
.btn.large{padding:16px 22px;font-size:17px}

/* hero */
.hero{padding:64px 0;background:var(--bg);border-bottom:1px solid var(--border-weak)}
.hero-inner{display:flex;gap:40px;align-items:center}
.hero-copy{flex:1;max-width:680px}
.hero-copy h1{font-family:Poppins,Inter,system-ui; font-size:44px;margin:0 0 14px;color:var(--text);line-height:1.05}
.lead{color:var(--muted);font-size:18px;margin-bottom:18px}
.hero-ctas{display:flex;gap:12px;margin-bottom:8px}
.trust{font-size:13px;color:var(--muted)}
.hero-visual{flex:0 0 48%;max-width:560px;position:relative;overflow:hidden;border-radius:14px;min-height:420px}
/* Use the raw hero image for the debug white theme so the subject is clearly visible */
.hero-visual{background-image: none; /* use <img.hero-img> instead of background to avoid duplicate layers */}

/* Hero preview tile — a guaranteed visible tile that shows the hero image immediately */
  .hero-tile{
  margin-top:16px;
  width:140px;height:100px;border-radius:10px;overflow:hidden;background-color:var(--tile-bg);border:1px solid var(--tile-border);
  box-shadow:0 8px 20px var(--tile-shadow);background-image:url('/assets/images/shark-hero.jpg');background-size:cover;background-position:center;flex-shrink:0
}

@media (max-width:960px){
  .hero-tile{width:120px;height:84px;margin-top:12px}
}
.hero-visual .hero-img{display:block;width:100%;height:100%;min-height:320px;object-fit:cover;filter:none;transform:translateZ(0);background:transparent;opacity:1}

/* safety: ensure the visual container is visible when images are empty or transparent */
.hero-visual::before{content:'';position:absolute;inset:0;background:var(--glass);pointer-events:none;z-index:-1}
.hero-overlay{z-index:0}
.hero-visual > *{position:relative;z-index:1}

/* foreground subject (transparent PNG/WebP) — centered and responsive */
.hero-subject-picture{position:absolute;inset:0;display:flex;align-items:center;justify-content:center;pointer-events:none;
  /* background fallback: use the site hero image (alpha layer optional) */
  background-image: url('/assets/images/shark-hero.jpg');
  background-position: center; background-repeat: no-repeat; background-size: contain;}
.hero-subject{max-width:82%;max-height:82%;width:auto;height:auto;object-fit:contain;opacity:1;transition:opacity .45s ease,transform .45s cubic-bezier(.2,.9,.2,1);transform:translateY(0);}
.hero-subject.visible{opacity:1;transform:translateY(0)}

/* ensure subject scales on small screens */
@media (max-width:960px){
  .hero-subject{max-width:92%;max-height:72%;transform:translateY(4%)}

  /* visual tile placed inside hero-visual (guaranteed visible in the hero area) */
  .hero-tile-visual{position:absolute;right:18px;bottom:18px;width:220px;height:140px;border-radius:12px;overflow:hidden;border:1px solid var(--tile-border);background-image:url('/assets/images/shark-hero.jpg');background-size:cover;background-position:center;box-shadow:0 20px 50px var(--tile-shadow);z-index:1}
  .hero-tile-visual::after{content:'Preview';position:absolute;left:8px;bottom:8px;color:var(--text);font-weight:700;padding:4px 8px;border-radius:6px;background:var(--tile-preview-bg);font-size:12px}
  @media (max-width:960px){ .hero-tile-visual{display:none} }
}
.hero-visual .hero-overlay{position:absolute;inset:0;background:transparent;pointer-events:none}

/* Hero steps tiles */
.hero-steps{display:flex;gap:12px;margin-top:18px;flex-wrap:wrap}
.hero-steps .step{display:flex;align-items:center;gap:10px;padding:14px;border-radius:12px;background:var(--tile-bg);border:1px solid var(--tile-border);box-shadow:0 12px 30px var(--tile-shadow);text-decoration:none;color:var(--text);min-width:160px;transition:transform .18s ease, box-shadow .18s ease}
.hero-steps .step .step-emoji{font-size:20px;opacity:0.96}
.hero-steps .step .step-title{font-weight:700}
.hero-steps .step:hover{transform:translateY(-6px);box-shadow:0 24px 50px rgba(0,0,0,0.45)}

/* Generic tile system */
.tile{display:block}
.tile.card{border-radius:14px;padding:18px;background:linear-gradient(180deg,var(--glass), rgba(0,0,0,0.03));border:1px solid var(--tile-border);box-shadow:0 10px 40px rgba(0,0,0,0.55);transition:transform .25s ease, box-shadow .25s ease}
.tile.card:hover{transform:translateY(-8px);box-shadow:0 30px 80px rgba(0,0,0,0.6)}

/* tile collection/grid */
.tiles{display:grid;grid-template-columns:repeat(3,1fr);gap:18px}
.tiles .tile{padding:18px;border-radius:12px;background:var(--tile-bg);border:1px solid var(--tile-border);box-shadow:0 10px 30px var(--tile-shadow)}

/* responsive tooltip-ish CTA style */
.btn-primary.glow{box-shadow:0 6px 20px rgba(0,216,216,0.12), 0 0 20px rgba(6,182,212,0.06)}

/* sticky header style change on scroll */
.site-header.scrolled{background:linear-gradient(180deg, rgba(2,6,10,0.9), rgba(2,6,10,0.85));box-shadow:0 8px 30px rgba(0,0,0,0.6);border-bottom:1px solid rgba(255,255,255,0.03)}

/* section reveal */
.reveal{opacity:0;transform:translateY(18px);transition:opacity .55s ease, transform .55s cubic-bezier(.2,.9,.2,1)}
.reveal.visible{opacity:1;transform:none}

/* trust strip */
.trust-strip{border-top:1px solid var(--border-weak);border-bottom:1px solid var(--border-weak);padding:12px 0;background:linear-gradient(90deg, rgba(6,182,212,0.02), rgba(251,113,133,0.01))}
.trust-grid{display:flex;gap:18px;justify-content:space-between}
.trust-item{font-size:13px;color:var(--text);opacity:0.95;padding:8px 6px}

/* plans */
.plans{padding:40px 0}
.plans h2{font-family:Poppins;font-size:28px;margin:0 0 4px}
.plans .sub{color:var(--muted);margin-bottom:14px}
.plan-cards{display:grid;grid-template-columns:repeat(3,1fr);gap:18px}
.card{border-radius:14px;background:linear-gradient(180deg, var(--glass), rgba(0,0,0,0.008));padding:18px;border:1px solid var(--border-weak)}
.plan-head{display:flex;align-items:center;justify-content:space-between;gap:10px}
.plan-name{font-weight:700;font-size:16px}
.plan-sub{font-size:13px;color:var(--muted)}
.plan-price{font-size:22px;font-weight:700}
.features{list-style:none;padding-left:0;margin-top:12px;margin-bottom:14px;color:var(--muted)}
.popular{box-shadow:0 12px 30px rgba(6,182,212,0.09);border-color:rgba(6,182,212,0.12)}
.badge{background:linear-gradient(90deg,#06B6D4,#00E1D8);padding:6px 10px;border-radius:20px;color:#021018;font-size:12px;display:inline-block;margin-bottom:10px}

/* features */
.features .feature-grid{display:grid}
.features{--ignored:0}
.features .feature{padding:18px}
.feature-grid{display:grid;grid-template-columns:repeat(2,1fr);gap:18px;margin-top:18px}
.feature{background:linear-gradient(90deg, var(--glass), var(--glass));border-radius:10px;padding:18px}
.feature .icon{font-size:22px;margin-bottom:6px}

/* domain search */
.domain-search{padding:36px 0;border-top:1px solid var(--border-weak);border-bottom:1px solid var(--border-weak);text-align:center}
.domain-form{display:inline-flex;align-items:center;gap:8px;background:var(--panel);padding:8px;border-radius:10px;border:1px solid var(--border-weak)}
.domain-form input{background:transparent;border:0;padding:10px;color:var(--text);outline:0;width:220px}
.domain-form select{background:transparent;border:0;color:var(--text);padding:10px;border-left:1px solid var(--border-weak)}
.domain-form button{margin-left:6px}

/* testimonials, faq, cta */
.test-cards{display:flex;gap:12px;margin-top:12px}
.test{background:var(--panel);padding:18px;border-radius:10px;color:var(--text);flex:1}
.faq details{background:transparent;border-radius:8px;padding:12px;margin:8px 0;border:1px solid var(--border-weak)}
.final-cta{padding:36px;text-align:center;background:linear-gradient(180deg, rgba(6,182,212,0.03), rgba(6,182,212,0.01));border-radius:12px;margin:22px 0}

/* footer */
.site-footer{padding:26px 0;border-top:1px solid var(--border-weak)}
.footer-grid{display:flex;gap:12px;align-items:center}
.footer-nav{display:flex;gap:10px;margin-left:18px}
.footer-nav a{color:var(--muted);text-decoration:none;font-size:13px}

/* small screens */
@media (max-width:960px){
  .hero-inner{flex-direction:column;gap:18px}
  .hero-visual{width:100%;min-height:220px}
  .hero-img{height:100%;}
  .plan-cards{grid-template-columns:repeat(1,1fr)}
  .tiles{grid-template-columns:repeat(1,1fr)}
  .feature-grid{grid-template-columns:repeat(1,1fr)}
  .test-cards{flex-direction:column}
  .nav{display:none}
  .nav.open{display:flex;flex-direction:column;position:absolute;left:16px;right:16px;top:64px;background:linear-gradient(180deg, rgba(2,8,23,0.95), rgba(2,8,23,0.95));padding:12px;border-radius:8px;box-shadow:0 10px 30px rgba(1,8,20,0.6)}
  .nav a{padding:10px;border-radius:8px}
  .nav-toggle{display:inline-flex;background:transparent;border:1px solid var(--border-weak);color:var(--text);padding:8px;border-radius:8px;align-items:center}

/* debug theme toggle button (inserted by JS only when debug is enabled) */
#theme-debug-toggle{position:fixed;right:14px;bottom:14px;z-index:9999;padding:8px 10px;border-radius:8px;border:1px solid var(--border-weak);background:var(--panel);color:var(--text);font-weight:600;box-shadow:0 8px 30px rgba(0,0,0,0.12)}
  .header-row{position:relative}
}

/* Prevent hero/tile images from overflowing the viewport */
.big-tile img, .hero-visual .hero-img, .tile img, .card img {
  max-width: 100%;
  max-height: 320px;
  object-fit: cover;
  display: block;
}

/* Left square tile image should fit neatly */
.grid .p-6 img.object-cover { max-height: 260px; width: auto; }

/* Hide legacy full-screen hero subject background to avoid giant background images */
.hero-subject-picture { display: none !important; }

